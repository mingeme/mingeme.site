---
import UILink from './ui/link.astro';

interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.match(/[^/]+/g);
const isActive = url === pathname || url === '/' + subpath?.[0];
---

<UILink href={url} rel="noopener noreferrer" isActive={isActive}>
  {title}
</UILink>
